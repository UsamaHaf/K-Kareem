<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|start">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_select_reason_of_rejection"
                    />
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/reason_cancel"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/quantum_ic_clear_grey600_24"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"/>


            <TextView
                android:id="@+id/reason_no_show"
                android:padding="@dimen/margin_15"
                android:layout_marginBottom="0dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_show"
                />
            <TextView
                android:id="@+id/reason_other"
                android:padding="@dimen/margin_15"
                android:layout_marginBottom="0dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other"
                 />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>